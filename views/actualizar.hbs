{{>nav}}
<div class="container">
        <form action="/actualizar/{{ actualizar._id }}"  id="formulario">
            
        <label for="titulo">Titulo</label>
<input type="text" name="titulo" value="{{actualizar.titulo}}" id="titulo" placeholder="Titulo">

<label for="descripcion">Descripcion</label>  
<input type="text" name="descripcion" id="descripcion" value="{{actualizar.descripcion}}" placeholder="Descripcion"> 
<label for="precio">Precio</label> 
<input type="text" name="precio" id="precio" value="{{actualizar.precio}}" placeholder="Precio">
            <div class="text-center m-4">
<button type="submit" class="btn btn-outline-warning w-50" method="post">Editar Publicacion</button>
            </div>
            <div class="text-center m-4">
                <button type="reset" class="btn btn-outline-dark w-50">Borrar Datos</button>
            </div>

        </form>
        <h2 class="text">PRODUCTO ACTUALIZADO</h2><a href="../mostrar" class="btn btn-primary">Volver</a>
</div>
{{>footer}}